@model ProyectoNominaINTBII.Models.Trabajador

@{
    ViewData["Title"] = "Details";



    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-custom {
        border: 2px solid #007BFF;
        border-radius: 10px;
        margin-top: 20px;
        padding: 20px;
    }

    .card-header-custom {
        background-color: white;
        color: black;
        border-bottom: none;
    }

    .header-container {
        border-bottom: 2px solid #007BFF;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    .btn-group-custom {
        display: flex;
        justify-content: center;
        gap: 10px;
        padding: 10px 0;
    }

    .btn-edit {
        background-color: #007BFF;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
    }

        .btn-edit:hover {
            background-color: #0056b3;
        }

    .btn-back {
        background-color: #6c757d;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
    }

        .btn-back:hover {
            background-color: #5a6268;
        }

    .info-container {
        font-size: 18px;
        line-height: 1.8;
    }

    .row-divider {
        margin-top: 20px;
    }

    h5 {
        margin-top: 20px;
        font-weight: bold;
        text-decoration: underline;
    }
</style>

<div class="container">
    <div class="header-container text-center">
        <h2>Detalles del Trabajador - @Model.Nombre @Model.ApellidoPaterno @Model.ApellidoMaterno</h2>
        <div class="btn-group-custom">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-edit">Editar</a>
            <a asp-action="Index" class="btn-back">Volver a la lista</a>
        </div>
    </div>
    <div class="card card-custom">
        <div class="card-body">
            <div class="row info-container">
                <div class="col-md-6">
                    <h5>Información Personal</h5>
                    <p><strong>Número de Empleado:</strong> @Model.NumEmpleado</p>
                    <p><strong>RFC:</strong> @Model.Rfc</p>
                    <p><strong>CURP:</strong> @Model.Curp</p>
                    <p><strong>Fecha de Nacimiento:</strong> @Model.FechaNac.ToShortDateString()</p>
                    <p><strong>Sexo:</strong> @Model.Sexo.Descipcion</p>
                    <p><strong>Estado Civil:</strong> @Model.EstadoCivil.Descripcion</p>
                </div>
                <div class="col-md-6">
                    <h5>Contacto y Ubicación</h5>
                    <p><strong>Calle:</strong> @Model.Calle</p>
                    <p><strong>Número Exterior:</strong> @Model.NumeroExt</p>
                    <p><strong>Número Interior:</strong> @Model.NumeroInt</p>
                    <p><strong>Colonia:</strong> @Model.Colonia</p>
                    <p><strong>Código Postal:</strong> @Model.Cp</p>
                    <p><strong>Teléfono Móvil:</strong> @Model.TelefonoMovil</p>
                    <p><strong>Teléfono Fijo:</strong> @Model.TelefonoFijo</p>
                </div>
            </div>
            <div class="row row-divider info-container">
                <div class="col-md-6">
                    <h5>Datos Laborales</h5>
                    <p><strong>Fecha de Ingreso:</strong> @Model.FechaIngreso.ToShortDateString()</p>
                    <p><strong>Departamento:</strong> @Model.Departamento.Descripcion</p>
                    <p><strong>Puesto:</strong> @Model.Puesto.Descripcion</p>
                    <p><strong>Salario Diario:</strong> $@Model.SalarioDiario.ToString("N2")</p>
                    <p><strong>Salario Integrado:</strong> $@Model.SalarioDiarioInte.ToString("N2")</p>
                    <p><strong>Nómina Generada:</strong> @Model.NominaGen</p>
                </div>
                <div class="col-md-6">
                    <h5>Otros Datos</h5>
                    <p><strong>Estado:</strong> @Model.Estado.DescripcionSat</p>
                    <p><strong>Municipio:</strong> @Model.Municipio.DescripcionSat</p>
                    <p><strong>Banco:</strong> @Model.Banco.DescripcionSat</p>
                    <p><strong>Cuenta Bancaria:</strong> @Model.CuentaBanco</p>
                    <p><strong>CLABE:</strong> @Model.Clabe</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                </div>
            </div>
        </div>
    </div>
</div>
