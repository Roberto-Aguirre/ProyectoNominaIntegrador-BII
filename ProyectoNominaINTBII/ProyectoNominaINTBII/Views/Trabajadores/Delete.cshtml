@model ProyectoNominaINTBII.Models.Trabajador

@{
    ViewData["Title"] = "Delete";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Delete Confirmation</h1>
<h3 class="text-center text-danger">Are you sure you want to delete this employee?</h3>

<div class="container mt-3">
    <div class="text-center mb-4">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">Confirm Delete</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
        </form>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            Información del trabajador a ELIMINAR
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Employee Number:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NumEmpleado)</dd>

                <dt class="col-sm-3">Full Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.ApellidoPaterno) @Html.DisplayFor(model => model.ApellidoMaterno)</dd>

                <dt class="col-sm-3">Birth Date:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaNac)</dd>

                <dt class="col-sm-3">Address:</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Calle),
                    @Html.DisplayFor(model => model.NumeroExt) @Html.DisplayFor(model => model.NumeroInt),
                    @Html.DisplayFor(model => model.Colonia),
                    @Html.DisplayFor(model => model.Cp)
                </dd>

                <dt class="col-sm-3">Contact:</dt>
                <dd class="col-sm-9">
                    Mobile: @Html.DisplayFor(model => model.TelefonoMovil),
                    Phone: @Html.DisplayFor(model => model.TelefonoFijo)
                </dd>

                <dt class="col-sm-3">RFC:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Rfc)</dd>

                <dt class="col-sm-3">CURP:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Curp)</dd>

                <dt class="col-sm-3">NSS:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nss)</dd>

                <dt class="col-sm-3">Bank Details:</dt>
                <dd class="col-sm-9">
                    Account: @Html.DisplayFor(model => model.CuentaBanco),
                    CLABE: @Html.DisplayFor(model => model.Clabe)
                </dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">Employment Dates:</dt>
                <dd class="col-sm-9">
                    Joining: @Html.DisplayFor(model => model.FechaIngreso),
                    Termination: @Html.DisplayFor(model => model.FechaBaja)
                </dd>
            </dl>
        </div>

        <div class="card-footer">
            Please review the information carefully before proceeding with deletion.
        </div>
    </div>
</div>

<style>
    .text-danger {
        color: #dc3545;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>
