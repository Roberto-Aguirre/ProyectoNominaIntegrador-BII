@model IEnumerable<ProyectoNominaINTBII.Models.Trabajador>

@{
    ViewData["Title"] = "Index";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Trabajadores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>

@foreach (var item in Model)

{
    <table class="table table-striped table-bordered mb-4">
        <thead class="table-dark">
            <tr>
                <th colspan="2">Información Personal</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>NumEmpleado</th>
                <td>@Html.DisplayFor(modelItem => item.NumEmpleado)</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            </tr>
            <tr>
                <th>Apellido Paterno</th>
                <td>@Html.DisplayFor(modelItem => item.ApellidoPaterno)</td>
            </tr>
            <tr>
                <th>Apellido Materno</th>
                <td>@Html.DisplayFor(modelItem => item.ApellidoMaterno)</td>
            </tr>
            <tr>
                <th>Fecha de Nacimiento</th>
                <td>@Html.DisplayFor(modelItem => item.FechaNac)</td>
            </tr>
        </tbody>

        <thead class="table-dark">
            <tr>
                <th colspan="2">Dirección</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Calle</th>
                <td>@Html.DisplayFor(modelItem => item.Calle)</td>
            </tr>
            <tr>
                <th>Número Exterior</th>
                <td>@Html.DisplayFor(modelItem => item.NumeroExt)</td>
            </tr>
            <tr>
                <th>Número Interior</th>
                <td>@Html.DisplayFor(modelItem => item.NumeroInt)</td>
            </tr>
            <tr>
                <th>Colonia</th>
                <td>@Html.DisplayFor(modelItem => item.Colonia)</td>
            </tr>
            <tr>
                <th>Código Postal</th>
                <td>@Html.DisplayFor(modelItem => item.Cp)</td>
            </tr>
        </tbody>

        <thead class="table-dark">
            <tr>
                <th colspan="2">Datos de Contacto</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Teléfono Móvil</th>
                <td>@Html.DisplayFor(modelItem => item.TelefonoMovil)</td>
            </tr>
            <tr>
                <th>Teléfono Fijo</th>
                <td>@Html.DisplayFor(modelItem => item.TelefonoFijo)</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
            </tr>
        </tbody>

        <thead class="table-dark">
            <tr>
                <th colspan="2">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="2">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        </tbody>
    </table>
}