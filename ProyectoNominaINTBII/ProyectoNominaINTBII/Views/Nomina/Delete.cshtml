@model ProyectoNominaINTBII.Models.Nomina

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Delete Confirmation</h1>
<h3 class="text-center text-danger">Are you sure you want to delete this payroll?</h3>

<div class="container mt-3">
    <div class="text-center mb-4">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">Confirm Delete</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
        </form>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            Información de la nómina a ELIMINAR
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Columna 1 -->
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-3">Ejercicio:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Ejercicio)</dd>

                        <dt class="col-sm-3">Fecha Inicial:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaInicial)</dd>

                        <dt class="col-sm-3">Fecha Final:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaFinal)</dd>

                        <dt class="col-sm-3">Fecha de Pago:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaPago)</dd>

                        <dt class="col-sm-3">Nomina Extraordinaria:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.NominaExtraordinariaId)</dd>

                        <dt class="col-sm-3">Concepto de Nómina:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ConceptoNomina)</dd>

                        <dt class="col-sm-3">Concepto de Timbrado:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ConceptoTimbrado)</dd>
                    </dl>
                </div>

                <!-- Columna 2 -->
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-3">Total Trabajadores:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.TotalTrabajadores)</dd>

                        <dt class="col-sm-3">Total Percepciones:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.TotalPercepciones)</dd>

                        <dt class="col-sm-3">Total Deducciones:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.TotalDeducciones)</dd>

                        <dt class="col-sm-3">Extraordinaria:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Extraordinaria)</dd>

                        <dt class="col-sm-3">Generada:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Generada)</dd>

                        <dt class="col-sm-3">Autorizada:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Autorizada)</dd>

                        <dt class="col-sm-3">Timbrada:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Timbrada)</dd>

                        <dt class="col-sm-3">Cerrada:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Cerrada)</dd>

                        <dt class="col-sm-3">Estatus:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Estatus)</dd>
                    </dl>
                </div>
            </div>

            <!-- Información de la Empresa y Periodo -->
            <div class="row row-divider">
                <div class="col-md-6">
                    <h5>Empresa y Periodo</h5>
                    <p><strong>Empresa:</strong> @Html.DisplayFor(model => model.Empresa.Nombre)</p>
                    <p><strong>Periodo:</strong> @Html.DisplayFor(model => model.Periodo.Descripcion)</p>
                </div>
                <div class="col-md-6">
                    <h5>Tipo de Pago</h5>
                    <p><strong>Tipo de Periocidad de Pago:</strong> @Html.DisplayFor(model => model.SatPeriocidadPago.DescripcionSat)</p>
                    <p><strong>Tipo de Contrato:</strong> @Html.DisplayFor(model => model.SatTipoContrato.Descripcion)</p>
                </div>
            </div>
        </div>

        <div class="card-footer">
            Please review the information carefully before proceeding with deletion.
        </div>
    </div>
</div>

<style>
    .text-danger {
        color: #dc3545;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .row-divider {
        margin-top: 20px;
    }
</style>
