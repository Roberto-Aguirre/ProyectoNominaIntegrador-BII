@model List<SistemaNomina.Models.EmployeeModel>

<h2>Generar Nómina</h2>

<form asp-action="Generate" method="post">
    <div class="form-group">
        <label for="employeeId">Selecciona un empleado</label>
        <select id="employeeId" name="employeeId" class="form-control">
            @foreach (var employee in Model)
            {
                <option value="@employee.Id">@employee.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Generar Nómina</button>
</form>
