@using ProyectoNominaINTBII.Models

<div class="edit-user-info-container">
    <h2 class="text-center mb-4">Editar Información de Usuario</h2>
    <form id="userInfoForm" asp-action="EditAllUsersInfo" asp-controller="Admin" method="post" novalidate>
        <div class="row">
            <div class="col-md-6 form-group">
                <label for="Id">ID:</label>
                <input type="text" id="Id" name="Id" value="@Model.Id" readonly class="form-control custom-input" />
            </div>
            <div class="col-md-6 form-group">
                <label for="Nombre">Nombre Completo:</label>
                <input type="text" id="Nombre" name="Nombre" value="@Model.Nombre" class="form-control custom-input" required />
            </div>
            <div class="col-md-6 form-group">
                <label for="NumeroEmpleado">Número de Empleado:</label>
                <input type="text" id="NumeroEmpleado" name="NumeroEmpleado" value="@Model.NumEmpleado" class="form-control custom-input" required />
            </div>
            <div class="col-md-6 form-group">
                <label for="FechaIngreso">Fecha de Ingreso:</label>
                <input type="date" id="FechaIngreso" name="FechaIngreso" value="@Model.FechaIngreso.ToString("yyyy-MM-dd")" class="form-control custom-input" required />
            </div>
            <div class="col-md-6 form-group">
                <label for="RFC">RFC:</label>
                <input type="text" id="RFC" name="RFC" value="@Model.RFC" class="form-control custom-input" required />
            </div>
            <div class="col-md-6 form-group">
                <label for="CURP">CURP:</label>
                <input type="text" id="CURP" name="CURP" value="@Model.CURP" class="form-control custom-input" required />
            </div>
            <div class="col-md-6 form-group">
                <label for="TelefonoMovil">Teléfono Móvil:</label>
                <input type="text" id="TelefonoMovil" name="TelefonoMovil" value="@Model.TelefonoMovil" class="form-control custom-input" required />
            </div>
            <div class="col-md-6 form-group">
                <label for="TelefonoFijo">Teléfono Fijo:</label>
                <input type="text" id="TelefonoFijo" name="TelefonoFijo" value="@Model.TelefonoFijo" class="form-control custom-input" required />
            </div>
            <div class="col-md-6 form-group">
                <label for="Email">Correo Electrónico:</label>
                <input type="email" id="Email" name="Email" value="@Model.Email" class="form-control custom-input" required />
            </div>
            <div class="col-md-6 form-group">
                <label for="Salario">Salario:</label>
                <input type="number" step="0.01" id="Salario" name="Salario" value="@Model.Salario" class="form-control custom-input" required />
            </div>
            <div class="col-md-6 form-group">
                <label for="SalarioDiario">Salario Diario:</label>
                <input type="number" step="0.01" id="SalarioDiario" name="SalarioDiario" value="@Model.SalarioDiario" class="form-control custom-input" required />
            </div>
          @*   <div class="form-group">
                <label for="Puesto">Puesto:</label>
                <select id="Puesto" name="PuestoId" class="form-control custom-select" required>
                    @foreach (var item in Model.Puestos)
                    {
                        <option value="@item.Value" @(item.Value == Model.PuestoId.ToString() ? "selected" : "")>@item.Text</option>
                    }
                </select>
            </div> *@
            <div class="col-md-6 form-group">
                <label for="Departamento">Departamento:</label>
                <input type="text" id="Departamento" name="Departamento" value="@Model.Departamento" class="form-control custom-input" required />
            </div>
        </div>

        <div class="edit-boton-container mt-4">
            <button type="submit" class="edit-btn-primary">
                <i class="fas fa-save icon-spacing"></i> Guardar Cambios
            </button>
        </div>
    </form>
</div>




<style>
    .edit-user-info-container {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 1000px;
        margin: 20px auto;
    }

    .form-row {
        margin-bottom: 15px;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control.custom-input {
        border-radius: 5px;
        border: 1px solid #007bff;
        padding: 10px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 1.1em;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

    .btn:hover {
        opacity: 0.8;
    }
</style>
